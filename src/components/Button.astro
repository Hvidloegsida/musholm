---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "drop-shadow-[0_4px_3px_rgba(0,0,0,0.50) bg-cyan-800/70 border-white text-white font-roboto hover:scale-110 hover:bg-cyan-900/70 hover:text-white hover:border-white transition-transform duration-300 ease-in-out";

const variantClasses = {
    "primary": "border-4 h-14 w-[10.5rem] sm:text-xl sm:h-16 sm:w-64 md:w-72 lg:w-96 lg:text-3xl lg:h-24",
    "secondary": "border-4 p-1 md:p-[1.3rem]"
};
---



<button
    class:list={[buttonStyling, variantClasses[variant]]}
>
    <slot />
</button>







