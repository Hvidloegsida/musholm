<style>
    .wrapper {
        display: flex;
        padding-top: 50px;
        justify-content: center;
    }

    .collapsible {
        overflow: hidden;
    }

    .collapsible input {
        display: none;
    }

    .collapsible label {
        position: relative;
        display: block;
        margin-bottom: 10px;
        cursor: pointer;
    }

    .collapsible label:after {
        content: "\25BC";
        position: absolute;
        right: 15px;
        transition: transform 300ms ease-in-out;

        }

        .collapsible label:hover:after {
    transform: scale(1.4); /* 140% size */
}

.collapsible input:checked + label:after {
    transform: rotate(180deg);
}

/* Combine both effects (checked + hover) */
.collapsible input:checked + label:hover:after {
    transform: rotate(180deg) scale(1.4);
}

        .collapsible-text {
            max-height: 1px;
            overflow: hidden;
            line-height: 1.4;
            position: relative;
        }

       .collapsible input:checked ~ .collapsible-text {
        max-height: 300px;
        padding-bottom: 25px;
        background-color: white;

       }


</style>